%html
%head
	<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	%title Pokemon LOL
	<link href='https://fonts.googleapis.com/css?family=Press+Start+2P' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="animate.min.css">
	<link href="hover-min.css" rel="stylesheet" media="all">
	= stylesheet_link_tag    'application', media: 'all'
	= javascript_include_tag 'application'
	= csrf_meta_tags 
%body
	%nav.navbar.navbar-default{:role => "navigation"}
		.container-fluid
			.navbar-header
				%button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
					%span.sr-only Toggle navigation
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar
				.navbar-brand.pixelate.hvr-wobble-skew= link_to "Pokemon LOL", root_path
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				- if user_signed_in?
					%ul.nav.navbar-nav.navbar-left
						%li.hvr-underline-from-center= link_to "All Posts", pins_path
						%li.hvr-underline-from-center= link_to "All Links", links_path
						%li.hvr-underline-from-center= link_to "All Users", users_path
					%ul.nav.navbar-nav.navbar-right
						%li.dropdown
							%a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"}
								Actions
								%b.caret
							%ul.dropdown-menu{"role" => "menu"}
								%li= link_to "Share A Link", new_link_path
								%li= link_to "New Post", new_pin_path
						%li.dropdown
							%a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"}
								Profile
								%b.caret
							%ul.dropdown-menu{"role" => "menu"}
								%li.user_hi.text-center  #{current_user.name}
								%li= link_to "Your Profile", current_user
								%li= link_to "Edit Your Account", edit_user_registration_path(current_user)
						%li.hvr-underline-from-center= link_to "Sign Out", destroy_user_session_path, method: :delete						
				- else
					%ul.nav.navbar-nav.navbar-left
						%li.hvr-underline-from-center= link_to "All Post", pins_path
						%li.hvr-underline-from-center= link_to "All Links", links_path
						%li.hvr-underline-from-center= link_to "All Users", users_path
					%ul.nav.navbar-nav.navbar-right
						%li.hvr-underline-from-center= link_to "Sign Up", new_user_registration_path
						%li.hvr-underline-from-center= link_to "Sign in", new_user_session_path
	.container		
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert alert-info"
		= yield
		%br
		%br
		%br	
	%footer.footer.navbar-fixed-bottom
		.container
			.row
				.col-md-5
					#footer_logo.navbar-brand.pixelate.hvr-wobble-skew= link_to "Pokemon LOL", root_path
				.col-md-7
					%ul.nav.navbar-nav.navbar-right
						%li.hvr-pop= link_to "About", pages_about_path
						%li.hvr-pop= link_to "Credits", pages_credits_path





